<%= form_with url: "/facturas", method: :post, model: @bill, local: true, class: "form" do |f| %>

  <div class="form-group">
    <%= f.label :user_id, "ID del usuario" %>
    <%= f.number_field :user_id, class: "input" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "DescripciÃ³n" %>
    <%= f.text_field :description, class: "input" %>
  </div>

  <div class="form-group">
    <%= f.label :amount, "Cantidad" %>
    <%= f.number_field :amount, class: "input" %>
  </div>

  <div class="form-group">
    <%= f.label :product, "Producto" %>
    <%= f.text_field :product, class: "input" %>
  </div>

  <div class="form-group">
    <%= f.label :bill_date, "Fecha" %>
    <%= f.date_field :bill_date, class: "input" %>
  </div>

  <%= f.submit "Crear factura", class: "btn-primary" %>

<% end %>

<% if flash[:success] %>
  <div class="flash flash-success"><%= flash[:success] %></div>
<% end %>

<% if flash[:error] %>
  <div class="flash flash-error"><%= flash[:error] %></div>
<% end %>
