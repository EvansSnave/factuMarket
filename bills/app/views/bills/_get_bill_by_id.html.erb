<%= form_with url: "/", method: :get, local: true, class: "form" do |f| %>
  <div class="form-group">
    <%= f.label :search_id, "ID de la factura" %>
    <%= f.number_field :search_id, class: "input" %>
  </div>

  <%= f.submit "Buscar factura", class: "btn" %>
<% end %>

<% if defined?(@requestedBill) && @requestedBill.present? %>
  <div class="result-box">
    <h3>Factura encontrada</h3>

    <ul class="result-list">
      <li><strong>ID:</strong> <%= @requestedBill.id %></li>
      <li><strong>ID cliente:</strong> <%= @requestedBill.user_id %></li>
      <li><strong>Descripci√≥n:</strong> <%= @requestedBill.description %></li>
      <li><strong>Cantidad:</strong> <%= @requestedBill.amount %></li>
      <li><strong>Producto:</strong> <%= @requestedBill.product %></li>
      <li><strong>Fecha:</strong> <%= @requestedBill.bill_date %></li>
    </ul>
  </div>
<% end %>
