<%= form_with url: "/", method: :get, local: true, class: "form" do |f| %>
  <div class="form-group">
    <%= f.label :fechaInicio, "Desde" %>
    <%= f.date_field :fechaInicio, class: "input" %>
  </div>

  <div class="form-group">
    <%= f.label :fechaFin, "Hasta" %>
    <%= f.date_field :fechaFin, class: "input" %>
  </div>

  <%= f.submit "Buscar facturas", class: "btn-primary" %>
<% end %>

<% if defined?(@bills) && @bills.present? %>
  <div class="result-box">
    <h3>Facturas encontradas</h3>

    <% @bills.each do |bill| %>
      <ul class="result-list">
        <li><strong>ID:</strong> <%= bill.id %></li>
        <li><strong>ID cliente:</strong> <%= bill.user_id %></li>
        <li><strong>Descripci√≥n:</strong> <%= bill.description %></li>
        <li><strong>Cantidad:</strong> <%= bill.amount %></li>
        <li><strong>Producto:</strong> <%= bill.product %></li>
        <li><strong>Fecha:</strong> <%= bill.bill_date %></li>
      </ul>
    <% end %>
  </div>
<% end %>
