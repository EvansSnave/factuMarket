<%= form_with url: "/", method: :get, local: true, class: "form" do |f| %>
  <%= hidden_field_tag :show_all, true %>
  <%= f.submit "Obtener todos", class: "btn" %>
<% end %>

<% if defined?(@all_users) && @all_users.present? %>
  <div class="result-box">
    <h3>Todos los usuarios</h3>
    <% @all_users.each do |user| %>
      <ul class="result-list">
        <li><strong>ID:</strong> <%= user.id %></li>
        <li><strong>Nombre:</strong> <%= user.name %></li>
        <li><strong>Email:</strong> <%= user.email %></li>
        <li><strong>Identificaci√≥n:</strong> <%= user.identification %></li>
      </ul>
    <% end %>
  </div>
<% end %>
