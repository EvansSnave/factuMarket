<div class="page-container">

  <h1 class="page-title">Gestión de Información de Clientes</h1>

  <section class="card">
    <h2 class="section-title">Esquema de cliente</h2>
    <pre class="schema"><code>
      user: {
        name: string,
        email: string (unico),
        password: string,
        password_confirmation: string,
        identificacion: integer
      }
    </code></pre>
  </section>

  <section class="card">
    <h2 class="section-title">Rutas disponibles</h2>
    <ul class="routes-list">
      <% @routes.each do |route| %>
        <li class="route-item">
          <p><strong>Método HTTP:</strong> <%= route[:method] %></p>
          <p><strong>Endpoint:</strong> <%= route[:endpoint] %></p>
          <p><%= route[:description] %></p>
        </li>
      <% end %>
    </ul>
  </section>

  <section class="card">
    <h2 class="section-title">Crear usuario</h2>
    <%= render "create_user", user: @user %>
  </section>

  <% if flash[:success] %>
    <div class="flash flash-success"><%= flash[:success] %></div>
  <% end %>

  <% if flash[:error] %>
    <div class="flash flash-error"><%= flash[:error] %></div>
  <% end %>

  <div class="two-columns">
    <section class="card child">
      <h2 class="section-title">Buscar usuario por ID</h2>
      <%= render "get_user_by_id" %>
    </section>

    <section class="card child">
      <h2 class="section-title">Obtener todos los usuarios</h2>
      <%= render "get_all_users" %>
    </section>
  </div>
</div>
