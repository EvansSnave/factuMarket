<%= form_with url: "/clientes", method: :post, model: @user, local: true, class: "form" do |f| %>

  <div class="form-group">
    <%= f.label :name, "Nombre" %>
    <%= f.text_field :name, class: "input" %>
  </div>

  <div class="form-group">
    <%= f.label :email, "Email" %>
    <%= f.email_field :email, class: "input" %>
  </div>

  <div class="form-group">
    <%= f.label :identification, "Identificación" %>
    <%= f.number_field :identification, class: "input" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Contraseña" %>
    <%= f.password_field :password, class: "input" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmar contraseña" %>
    <%= f.password_field :password_confirmation, class: "input" %>
  </div>

  <div>
    <%= f.submit "Crear usuario", class: "btn-primary" %>
  </div>

<% end %>
